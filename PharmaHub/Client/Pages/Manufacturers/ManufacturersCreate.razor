@page "/manufacturers/create/"
@inject HttpClient _client
@inject NavigationManager _navManager
<h3 class="card-title">Create New Manufacturer</h3>
<hr />
<br />

<EditForm Model="manufacturer" OnValidSubmit="CreateManufacturer">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label>Manufacturer Name: </label>
        <div>
            <InputText @bind-Value="@manufacturer.Name" class="form-control" />
            <ValidationMessage For="@(() => manufacturer.ManufacturerName)" />
        </div>
    </div>

    <div class="form-group">
        <label>Country: </label>
        <div>
            <InputText @bind-Value="@manufacturer.Country" class="form-control" />
            <ValidationMessage For="@(() => manufacturer.Country)" />
        </div>
    </div>

    <div class="form-group">
        <label>Contact Info: </label>
        <div>
            <InputText @bind-Value="@manufacturer.ContactInfo" class="form-control" />
            <ValidationMessage For="@(() => manufacturer.ContactInfo)" />
        </div>
    </div>

    <button type="submit" class="btn btn-success btn-block">
        Create Manufacturer
    </button>
</EditForm>

@code
{
    Manufacturer manufacturer = new Manufacturer();

    private async Task CreateManufacturer()
    {
        await _client.PostAsJsonAsync(Endpoints.ManufacturersEndpoint, manufacturer);
        _navManager.NavigateTo("/manufacturers/");
    }
}
